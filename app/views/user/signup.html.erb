 <style>
body{
 background-image: url|asset|images|login;
 background-color: pink;
}
form {
    display: inline-block;
    text-align: center;
    
}
</style>
<div class="bg-img" style="margin-left:0vw; width:70vw;">
<h2 style="text-align: center;"> Signup Form</h2>


  <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
  <div style="float:left;"> 
 <img src = "/assets/signup.jpg" alt = "signup.jpg" / >
   </div>
  
  <%= form_with model:@user , url: signup_path do |form|  %>

  <div class="container" style="width:30vw;">
  
<h1>Sign up</h1>
<p> Please fill in this form to create an account</p>
<hr>
    <%= form.label :name %>
    <%= form.text_field :name %>

    <%= form.label :email %>
    <%= form.email_field :email %>
 
    <%= form.label :password %>
    <%= form.password_field :password %>
 
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  
    <%= form.submit "Submit" %>
    </div>
 <% end %>
</div>
 